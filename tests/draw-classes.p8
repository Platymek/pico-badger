pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include ../pico-badger.lua

s = Sprite   :new(0, 0, 0)
r = Rectangle:new(0, 0, 8, 16)
c = Circle   :new(4, 16, 0)

sprites = {}
for i = 1, 3 do

    sprites[#sprites+1] = Sprite:new(i, -2, -4)
end

rectangles = {}
for i = 1, 3 do

    rectangles[#rectangles+1] = Rectangle:new(-4, -2, 4 + 2 * i, 4 + 2 * i)
end

circles = {}
for i = 1, 3 do

    circles[#circles+1] = Circle:new(4 + 2 * i)
end

function _draw()

    cls()

    r:draw(2)
    s:draw()
    c:draw(2)

    for i, sprite in ipairs(sprites) do

        sprite:draw(i * 8, i * 16)
    end

    for i, rectangle in ipairs(rectangles) do

        rectangle:draw(i + 2, i * 8, i * 16)
    end

    for i, circle in ipairs(circles) do

        circle:draw(i + 2, i * 8 + 16, i * 16)
    end
end
