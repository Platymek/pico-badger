pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
#include ../pecs/pecs.lua
#include ../pico-badger.lua

r = Rectangle:new(-4, -6, 8, 12)
c = Circle:new(4, 0, 12)

p1 = Position:new(64 - 16, 64)
p2 = Position:new(64 + 16, 64)

function _update()

    if btn(0) then
        p1.x = p1.x - 1
    end
    if btn(1) then
        p1.x = p1.x + 1
    end
    if btn(2) then
        p1.y = p1.y - 1
    end
    if btn(3) then
        p1.y = p1.y + 1
    end
end

function _draw()

    cls()


    -- rectangles

    r1 = r:getOffset(p1.x, p1.y)
    r2 = r:getOffset(p2.x, p2.y)

    r1:draw(7, nil, nil, r1:isOverlapping(r2))
    r2:draw(7, nil, nil, r1:isOverlapping(r2))
    

    -- circles

    c1 = c:getOffset(p1.x, p1.y)
    c2 = c:getOffset(p2.x, p2.y)

    c1:draw(7, nil, nil, c1:isOverlapping(c2))
    c2:draw(7, nil, nil, c1:isOverlapping(c2))
end
